<div class="container my-5">
    <div class="row">
        <div class="col-md-8">
            <div class="student_Add_button">
                <a class="btn btn-primary" href="student/create">Add New Student</a>
                <br>
                <br>
            </div>
            <div class="card">
                <div class="card-body">
                    <h2>All Student</h2>
                    <hr>
                    <table class="align-middle table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Cell</th>
                                <th>Photo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach((element, index) => { %>
                            <tr>
                                <td><%= index + 1 %> </td>
                                <td><%= element.name %> </td>
                                <td><%= element.email %></td>
                                <td><%= element.cell %></td>
                                <td><img style="height: 50px; width: 50px; object-fit: cover;"
                                        src="../assets/upload/<%= element.photo %>" alt=""></td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="/student/<%= element._id %>"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-sm btn-warning" href=""><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-sm btn-danger" href="/student/delete/<%= element.id %> "><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>